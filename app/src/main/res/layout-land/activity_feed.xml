<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.globant.fernandoraviola.fidreader.activities.FeedActivity">

    <fragment
        android:layout_width="0dp"
        android:layout_weight="6"
        android:layout_height="match_parent"
        android:name="com.globant.fernandoraviola.fidreader.fragments.EntryListFragment"
        android:id="@+id/entry_list_frg"
        tools:layout="@layout/fragment_entry" />

    <fragment
        android:layout_width="0dp"
        android:layout_weight="6"
        android:layout_height="match_parent"
        android:name="com.globant.fernandoraviola.fidreader.fragments.EntryDetailFragment"
        android:id="@+id/entry_details_frg"
        tools:layout="@layout/fragment_detail" />

</LinearLayout>
